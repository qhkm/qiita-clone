    "gravatar": "^1.6.0",
    "jsonwebtoken": "^8.2.0",
    "mongoose": "^5.0.12",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "validator": "^9.4.1"
  },
  "engines": {
    "node": "10.10.0",
    "npm": "6.4.1"
  },
  "devDependencies": {
    "eslint-plugin-prettier": "^3.0.0",
